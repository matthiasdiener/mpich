ALL: default
##### User configurable options #####

ARCH        = @ARCH@
COMM        = @COMM@
BOPT        = @BOPT@
P4_DIR      = @P4_DIR@
TOOLS_DIR   = @TOOLS_DIR@
MPIR_HOME   = @MPIR_HOME@
CC          = @CC@
CLINKER     = $(CC)
CCC         = @CPP_COMPILER@
CCLINKER    = $(CCC)
F77         = @F77@
FLINKER     = $(F77)
AR          = @AR@
RANLIB      = @RANLIB@
#PROFILING   = $(PROF_DIR)/$(PROF_FILE) $(PROF_LIB)
OPTFLAGS    = @OPTFLAGS@
MPE_LIBS    = @MPE_LIBS@
MPE_DIR     = @MPE_DIR@
PROF_LIB    = -lpmpi
PROF_DIR    = $(MPIR_HOME)/profiling/lib
PROF_FILE   = time_wrappers.o
LIB_PATH    = @LIB_PATH@ @X_LIB@
# On the meiko, you need to add -lsocket to LIB_LIST
LIB_LIST    = $(PROFILING) @LIB_LIST@
INCLUDE_DIR = @USER_INCLUDE_PATH@ -I$(MPIR_HOME)/include -I@MPE_DIR@ @X_INC@
DEVICE      = @DEVICE@
MPE_GRAPH   = @MPE_GRAPHICS@

### End User configurable options ###

CFLAGS  = @USER_CFLAGS@ $(OPTFLAGS) $(INCLUDE_DIR) -DMPI_$(ARCH) $(MPE_GRAPH)
CCFLAGS = $(CFLAGS)
LIBS = $(LIB_PATH) $(LIB_LIST)
EXECS = pmandel

default: $(EXECS)

all: default

fract_gen.o: fract_gen.h pmandel.h

pm_genproc.o: pmandel.h fract_gen.h

pmandel.o: pmandel.h fract_gen.h lists.h pm_genproc.h

pm_separate_rect.o: pmandel.h pm_genproc.h

pmandel: pmandel.o pm_genproc.o fract_gen.o pm_separate_rect.o lists.o args.o
	$(CLINKER) $(OPTFLAGS) -o pmandel pmandel.o pm_genproc.o \
	  fract_gen.o pm_separate_rect.o lists.o args.o \
	  $(LIB_PATH) $(MPE_LIBS) $(LIB_LIST)

clean:
	/bin/rm -f *.o *~ PI* $(EXECS) *.log *.out

.c.o:
	$(CC) $(CFLAGS) -c $*.c
.f.o:
	$(F77) $(FFLAGS) -c $*.f
