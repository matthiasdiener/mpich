MAKE   = @MAKE@
SHELL  = /bin/sh
RM     = rm

all:
	@( UPSHOT_BUILD_DIR=`pwd` ; \
	   ./sbin/install-viewer -prefix=$${UPSHOT_BUILD_DIR} )

install:
	@if [ -n "$(PREFIX)" ] ; then \
	     ./sbin/install-viewer -prefix=$(PREFIX) ; \
	 else \
	     ./sbin/install-viewer ; \
	 fi

uninstall:
	@-./sbin/uninstall-viewer

clean:
	$(RM) -f bin/upshot 

distclean: clean uninstall
	@-$(RM) -f sbin/install-viewer
	@-$(RM) -f Makefile config.log config.status


