#! /bin/sh
#
# Run some of the tests.  If any arguments are provided, pass them to the
# test programs.
if [ -f context.out ] ; then
	mv context.out context.out.orig
fi

args=-pg

#
# Run Fortran tests ONLY if Fortran available
if [ 1 = 1 ] ; then 
    echo "FORTRAN TESTS" >> context.out
    make fortran_tests
    echo '*** Testing attributes from Fortran ***'
    echo "*** attrtest ***" >> context.out
    mpirun $args -np 2 attrtest $* >> context.out 
    echo "END OF FORTRAN TESTS" >> context.out
fi
echo '*** Differences from expected output ***'
diff -b context.out context.std
exit 0
