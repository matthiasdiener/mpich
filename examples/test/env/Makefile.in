ALL: default
##### User configurable options #####

ARCH        = @ARCH@
COMM        = @COMM@
BOPT        = @BOPT@
P4_DIR      = @P4_DIR@
TOOLS_DIR   = @TOOLS_DIR@
MPIR_HOME   = @MPIR_HOME@
CC          = @CC@
CLINKER     = @CLINKER@
CCC         = @CPP_COMPILER@
CCLINKER    = $(CCC)
F77         = @F77@
FLINKER     = @FLINKER@
AR          = @AR@
RANLIB      = @RANLIB@
PROFILING   = $(PMPILIB)
OPTFLAGS    = @OPTFLAGS@
LIB_PATH    = @LIB_PATH@
FLIB_PATH   = @FLIB_PATH@
LIB_LIST    = @LIB_LIST@
#
INCLUDE_DIR = @USER_INCLUDE_PATH@ -I$(MPIR_HOME)/include
DEVICE      = @DEVICE@

### End User configurable options ###

SHELL = /bin/sh

CFLAGS  = @USER_CFLAGS@ $(OPTFLAGS) $(INCLUDE_DIR) -DMPI_$(ARCH)
CCFLAGS = $(CFLAGS)
FFLAGS = @FFLAGS@ $(OPTFLAGS)
MPILIB = $(MPIR_HOME)/lib/$(ARCH)/$(COMM)/libmpi.a 
MPIPPLIB = $(MPIR_HOME)/lib/$(ARCH)/$(COMM)/libmpi++.a
LIBS = $(LIB_PATH) $(LIB_LIST)
FLIBS = $(FLIB_PATH) $(LIB_LIST)
LIBSPP = $(MPIPPLIB) $(LIBS)
EXECS = timers baseattr errhand sigchk timertest

default: $(EXECS)

#
# Note that runtests builds the executables as required
testing: $(MPIR_HOME)/util/mpirun
	-./runtests $(TESTARGS)

linktest: default clean

all: testing

timers: timers.o test.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o timers timers.o test.o $(LIBS)
timertest: timertest.o test.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o timertest timertest.o test.o $(LIBS)
baseattr: baseattr.o test.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o baseattr baseattr.o test.o $(LIBS)
baseattrf: baseattrf.o $(MPILIB)
	$(FLINKER) $(OPTFLAGS) -o baseattrf baseattrf.o $(LIBS)
errhand: errhand.o test.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o errhand errhand.o test.o $(LIBS)
sigchk: sigchk.o test.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o sigchk sigchk.o test.o $(LIBS)
clean:
	/bin/rm -f *.o *~ PI* $(EXECS) baseattrf core *.out *.orig env.diff \
	argstest

.c.o:
	$(CC) $(CFLAGS) -c $*.c
.f.o:
	$(F77) $(FFLAGS) -c $*.f

$(MPIR_HOME)/util/mpirun:
	(cd $(MPIR_HOME) ; make mpirun )
