ALL: default
##### User configurable options #####

ARCH        = @ARCH@
COMM        = @COMM@
BOPT        = @BOPT@
P4_DIR      = @P4_DIR@
TOOLS_DIR   = @TOOLS_DIR@
MPIR_HOME   = @MPIR_HOME@
CC          = @CC@
CLINKER     = $(CC)
CCC         = @CPP_COMPILER@
CCLINKER    = $(CCC)
F77         = @F77@
FLINKER     = $(F77)
AR          = @AR@
RANLIB      = @RANLIB@
PROFILING   = $(PMPILIB)
OPTFLAGS    = @OPTFLAGS@
MPE_LIBS    = @MPE_LIBS@
MPE_DIR     = @MPE_DIR@
LIB_PATH    = @LIB_PATH@
LIB_LIST    = @LIB_LIST@
PETSC_AVAIL = @PETSC_AVAIL@
#
INCLUDE_DIR = @USER_INCLUDE_PATH@ -I$(MPIR_HOME)/include -I$(MPE_DIR)
DEVICE      = @DEVICE@

### End User configurable options ###

CFLAGS  = @USER_CFLAGS@ $(OPTFLAGS) $(INCLUDE_DIR) -DMPI_$(ARCH) $(PETSC_AVAIL)
CCFLAGS = $(CFLAGS)
#FFLAGS = '-qdpc=e' 
FFLAGS = $(INCLUDE_DIR) $(OPTFLAGS)
MPILIB = $(MPIR_HOME)/lib/$(ARCH)/$(COMM)/libmpi.a 
MPIPPLIB = -lmpi++
LIBS = $(LIB_PATH) $(LIB_LIST)
LIBSPP = $(MPIPPLIB) $(LIBS)
EXECS = cpi++ life++
default: $(EXECS)

all: default

cpi++: cpi++.o $(MPIR_HOME)/include/mpir.h $(MPILIB)
	$(CCLINKER) $(OPTFLAGS) -o cpi++ cpi++.o ${MPE_LIBS} $(LIBSPP)

life++: life++.o $(MPIR_HOME)/include/mpir.h $(MPILIB)
	$(CCLINKER) $(OPTFLAGS) -o life++ life++.o $(LIBSPP)

clean:
	/bin/rm -f *.o *~ PI* $(EXECS)

.C.o:
	$(CCC) $(CCFLAGS) -c $*.C

