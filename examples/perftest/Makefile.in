ALL: default
##### User configurable options #####

ARCH        = @ARCH@
COMM        = @COMM@
BOPT        = @BOPT@
P4_DIR      = @P4_DIR@
TOOLS_DIR   = @TOOLS_DIR@
MPIR_HOME   = @MPIR_HOME@
CC          = @CC@
CLINKER     = @CLINKER@
CCC         = @CPP_COMPILER@
CCLINKER    = $(CCC)
F77         = @F77@
FLINKER     = @FLINKER@
AR          = @AR@
RANLIB      = @RANLIB@
PROFILING   = $(PMPILIB)
OPTFLAGS    = @OPTFLAGS@
LIB_PATH    = @LIB_PATH@
FLIB_PATH   = @FLIB_PATH@
LIB_LIST    = @LIB_LIST@
#
INCLUDE_DIR = @USER_INCLUDE_PATH@ -I$(MPIR_HOME)/include 
DEVICE      = @DEVICE@

### End User configurable options ###

SHELL = /bin/sh

PROFLIB = 
CFLAGS  = @USER_CFLAGS@ $(OPTFLAGS) $(INCLUDE_DIR) -DMPI_$(ARCH)
CCFLAGS = $(CFLAGS)
FFLAGS = @FFLAGS@ $(OPTFLAGS)
MPILIB = $(MPIR_HOME)/lib/$(ARCH)/$(COMM)/libmpi.a 
MPELIB = $(MPIR_HOME)/lib/$(ARCH)/$(COMM)/libmpe.a 
MPIPPLIB = $(MPIR_HOME)/lib/$(ARCH)/$(COMM)/libmpi++.a
FLIBS = $(FLIB_PATH) $(LIB_LIST)
LIBS = $(LIB_PATH) $(PROFLIB) $(LIB_LIST) -lm
LIBSPP = $(MPIPPLIB) $(LIBS)
EXECS = mpptest goptest vectest stress copytest

default: $(EXECS)

OBJS = gopf.o grph.o ovlap.o pair.o pattern.o util.o getopts.o \
	tstauto.o rate.o

mpptest: mpptest.o $(OBJS) $(MPILIB) $(MPELIB)
	$(CLINKER) $(OPTFLAGS) -o mpptest mpptest.o $(OBJS) $(MPELIB) $(LIBS)

goptest: goptest.o $(OBJS) $(MPILIB) $(MPELIB)
	$(CLINKER) $(OPTFLAGS) -o goptest goptest.o $(OBJS) $(MPELIB) $(LIBS)

copytest: copytest.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o copytest copytest.o $(LIBS)

stress: stress.o daytime.o getopts.o $(MPILIB) $(MPELIB)
	$(CLINKER) $(OPTFLAGS) -o stress stress.o daytime.o \
		getopts.o $(MPELIB) $(LIBS)

tunepkt: tunepkt.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o tunepkt tunepkt.o $(LIBS)

vectest: mpif.h vectest.o
	$(FLINKER) $(OPTFLAGS) -o vectest vectest.o $(FLIBS)

clean:
	/bin/rm -f *.o *~ $(EXECS) tunepkt core TAGS .foo *.gpl \
	           *.log gop.ps 

.c.o:
	$(CC) $(CFLAGS) -c $*.c
.f.o:
	$(F77) $(FFLAGS) -c $*.f

mpif.h:
	ln -s $(MPIR_HOME)/include/mpif.h mpif.h
