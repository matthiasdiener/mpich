ALL: default
##### User configurable options #####

ARCH        = @ARCH@
COMM        = @COMM@
BOPT        = @BOPT@
P4_DIR      = @P4_DIR@
TOOLS_DIR   = @TOOLS_DIR@
MPIR_HOME   = @MPIR_HOME@
CC          = @CC@
CLINKER     = @CLINKER@
CCC         = @CPP_COMPILER@
CCLINKER    = $(CCC)
F77         = @F77@
FLINKER     = @FLINKER@
AR          = @AR@
RANLIB      = @RANLIB@
PROFILING   = $(PMPILIB)
OPTFLAGS    = @OPTFLAGS@
LIB_PATH    = @LIB_PATH@
FLIB_PATH   = @FLIB_PATH@
LIB_LIST    = @LIB_LIST@
#
INCLUDE_DIR = @USER_INCLUDE_PATH@ -I$(MPIR_HOME)/include 
DEVICE      = @DEVICE@

### End User configurable options ###

SHELL = /bin/sh

PROFLIB = 
CFLAGS  = @USER_CFLAGS@ $(OPTFLAGS) $(INCLUDE_DIR) -DMPI_$(ARCH)
CCFLAGS = $(CFLAGS)
FFLAGS = @FFLAGS@ $(OPTFLAGS)
MPILIB = $(MPIR_HOME)/lib/$(ARCH)/$(COMM)/libmpi.a 
FLIBS = $(FLIB_PATH) $(LIB_LIST)
LIBS = $(LIB_PATH) $(PROFLIB) $(LIB_LIST) -lm
LIBSPP = $(MPIPPLIB) $(LIBS)
EXECS = mpptest goptest vectest stress copytest ctest

default: $(EXECS)

OBJS = gopf.o grph.o ovlap.o pair.o pattern.o util.o getopts.o \
	tstauto.o rate.o mpe_seq.o

mpptest: mpptest.o $(OBJS) $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o mpptest mpptest.o $(OBJS) $(LIBS)

goptest: goptest.o $(OBJS) $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o goptest goptest.o $(OBJS) $(LIBS)

copytest: copytest.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o copytest copytest.o $(LIBS)

stress: stress.o daytime.o getopts.o $(MPILIB) 
	$(CLINKER) $(OPTFLAGS) -o stress stress.o daytime.o \
		getopts.o $(LIBS)

tunepkt: tunepkt.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o tunepkt tunepkt.o $(LIBS)

pktuse: pktuse.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o pktuse pktuse.o $(LIBS)

ctest: ctest.o $(MPILIB)
	$(CLINKER) $(OPTFLAGS) -o ctest ctest.o $(LIBS)

vectest: mpif.h vectest.o
	$(FLINKER) $(OPTFLAGS) -o vectest vectest.o $(FLIBS)

clean:
	/bin/rm -f *.o *~ $(EXECS) tunepkt pktuse core TAGS .foo *.gpl \
	           *.log gop.ps *.gpl *.gcm makeplot info.txt basetest.tar

.c.o:
	$(CC) $(CFLAGS) -c $*.c
.f.o:
	$(F77) $(FFLAGS) -c $*.f

mpif.h:
	ln -s $(MPIR_HOME)/include/mpif.h mpif.h
