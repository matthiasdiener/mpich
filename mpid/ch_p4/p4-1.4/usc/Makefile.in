P4ARCH = @P4ARCH@
MAKE = @MAKE@
CC = @CC@
FC = @FC@
CLINKER = @CLINKER@
FLINKER = @FLINKER@
RANLIB = @RANLIB@
AR = @AR@
RM = @RM@
MDEP_LIBS = @MDEP_LIBS@
MDEP_CFLAGS = @MDEP_CFLAGS@
MDEP_FFLAGS = @MDEP_FFLAGS@
MDEP_LFLAGS = @MDEP_LFLAGS@
P4_OBJ = @P4_OBJ@

CFLAGS = @OPTFLAGS@ -I$(INCLUDEDIR) $(MDEP_CFLAGS) $(USER_CFLAGS)

FFLAGS = @OPTFLAGS@ -I$(FORTLIBDIR) $(MDEP_FFLAGS)
P4_HOME_DIR = ..
INCLUDEDIR = $(P4_HOME_DIR)/include
LIBDIR = $(P4_HOME_DIR)/lib
LIBS = $(MDEP_LIBS)

USER_CFLAGS =  -D$(P4ARCH)

USC_HDR = usc_sys.h usc.h
USC_SRC = usc.c
USC_OBJ = usc.o

.SUFFIXES:	.o .c .f .h

.c.o:$(P)
	$(CC) $(CFLAGS) -c $*.c 

.f.o:$(P)
	$(FC) $(FFLAGS) -c $*.f 

dummy:	default

clean:
	$(RM) -f *~ *.o *.bak tags TAGS core

default:	
	$(MAKE) $(LIBDIR)/libp4.a

all:	
	$(MAKE) $(LIBDIR)/libp4.a

usc.o:$(P)
	$(CC) $(CFLAGS) -I$(INCLUDEDIR) -c usc.c 

$(USC_OBJ):  $(USC_SRC) $(USC_HDR)


$(LIBDIR)/libp4.a:  $(USC_OBJ)
	$(AR) $(LIBDIR)/libp4.a $?
	$(RANLIB) $(LIBDIR)/libp4.a
#	$(AR) $@ $?
#	$(RANLIB) $@

p4inmpi:$(P) $(USC_OBJ)
	$(AR) ../../../../lib/$(MPIARCH)/ch_p4/lib$(MPILIBNAME).a $?
	$(RANLIB) ../../../../lib/$(MPIARCH)/ch_p4/lib$(MPILIBNAME).a

realclean:	clean
	$(RM) -f $(LIBDIR)/libp4.a Makefile
	@cd usctest; $(MAKE) clean

