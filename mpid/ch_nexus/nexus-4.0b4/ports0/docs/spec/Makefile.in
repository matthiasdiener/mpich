#
# makefile
#
# Makefile for latex-ing the PORTS level 0 spec
#
# rcsid = $Header: /nfs/globus1/src/master/ports0/docs/spec/Makefile.in,v 1.2 1996/02/07 19:51:12 geisler Exp $
#

SHELL=/bin/sh

RES=300

dvi ports0.dvi:	ports0.tex
	latex ports0
	latex ports0

ports0.ps:	ports0.dvi
	dvips -D $(RES) ports0 -o

mostlyclean:
	rm -f ports0.aux ports0.toc ports0.log ports0.dvi ports0.ps
	
clean:
	rm -f *~ ports0.aux ports0.toc ports0.log ports0.dvi ports0.ps

#
# config.cache is normally in ../../../, but put it here just to be safe
#
XTRA_FILES=config.cache \
	   config.log \
	   config.status \
	   Makefile

distclean: clean
	rm -f $(XTRA_FILES)

TARFILES = ports0.tex makefile

ports0.tar:	force
	rm -f ports0.tar
	tar cf ports0.tar $(TARFILES)

ports0.tar.Z:	force
	rm -f ports0.tar.Z
	tar cf - $(TARFILES) | compress > ports0.tar.Z

ports0.tar.gz:	force
	rm -f ports0.tar.gz
	tar cf - $(TARFILES) | gzip > ports0.tar.gz

force:
