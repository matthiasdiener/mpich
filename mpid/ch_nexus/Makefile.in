##### User configurable options #####

ARCH        = @ARCH@
COMM        = @COMM@
DEVICE      = @DEVICE@
MPIR_HOME   = @MPIR_HOME@
INCLUDE_DIR = @INCLUDE_PATH@
CC          = @CC@
AR          = @AR@
RANLIB      = @RANLIB@
OPTFLAGS    = @OPTFLAGS@
SHELL       = /bin/sh
ASMFILES_O  = @ASMFILES_O@
NEXUS_HOME  = @NEXUSDIR@
### End User configurable options ###

ALL: default

LIBNAME  = ../../lib/$(ARCH)/$(COMM)/lib@MPILIBNAME@.a
CFLAGS   = @CFLAGS@ $(OPTFLAGS) -I../.. -I../../include -I./ $(INCLUDE_DIR) \
		-DMPI_$(ARCH) -DMPID_DEVICE_CODE @GETNAME_DEFS@ @DEV_DEFS@ \
	        @DEVCFLAGS@
# See mpid/ch_adi2/Makefile.in for a full list
CIAS   = adi2recv.A adi2send.A adi2init.A adi2cancel.A \
	    adi2hrecv.A adi2hsend.A adi2hssend.A \
	    adi2probe.A adi2pack.A adi2req.A adi2ssend.A \
	    chdebug.A \
	    queue.A cmnargs.A sbcnst2.A \
	    nexuspriv.A

SOURCE   = adi2recv.c adi2send.c adi2init.c adi2cancel.c \
	    adi2hrecv.c adi2hsend.c adi2hssend.c \
	    adi2probe.c adi2pack.c adi2req.c adi2ssend.c \
	    chdebug.c chnodename.c chtick.c \
	    queue.c cmnargs.c sbcnst2.c \
	    nexuspriv.c
SOURCEC  = $(SOURCE)
SOURCEF  =
MPI_OBJECTS = adi2recv.o adi2send.o adi2init.o adi2cancel.o \
	      adi2hrecv.o adi2hsend.o adi2hssend.o \
	      adi2probe.o adi2pack.o adi2req.o adi2ssend.o \
	      chdebug.o chnodename.o chtick.o \
	      queue.o cmnargs.o sbcnst2.o \
	      nexuspriv.o \
	      $(ASMFILES_O) @DEVOFILES@

default: $(LIBNAME)
local: libmpid.a

# default_all is the same as default, but without the RANLIB.  This
# can speed up the build (ranlibs can take a LONG time).  profile_all 
# is the same, but for the profile library.  

# It is important that nexusinmpi be made first, before the files here.
default_all: nexusinmpi $(MPI_OBJECTS)
	$(AR) $(LIBNAME) $(MPI_OBJECTS)
profile_all: 

$(MPI_OBJECTS): dev.h req.h mpid.h

clean:
	/bin/rm -f *~ $(MPI_OBJECTS) 

.c.A:
	cia $(CFLAGS) $(BASEOPT) -c $*.c $(MPI_PROFILE)

.c.o:
	$(CC) $(CFLAGS) $(BASEOPT) -c $*.c $(MPI_PROFILE)

.o.s:
	$(CC) $(CFLAGS) $(BASEOPT) -c -S $*.c $(MPI_PROFILE)

CIA: $(CIAS)
	cia $(CIAS)

../../lib/$(ARCH)/$(COMM)/lib@MPILIBNAME@.a: $(MPI_OBJECTS) 
	$(AR) $@ $?
	$(RANLIB) $@

nexusinmpi:
	(cd $(NEXUS_HOME); \
	$(MAKE) ; cd ..)

libmpid.a: $(MPI_OBJECTS) 
	$(AR) $@ $?
	$(RANLIB) $@

