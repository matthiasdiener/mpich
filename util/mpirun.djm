if [ "$MPIR_HOME" = "" ] ; then 
    MPIR_HOME=/home/gropp/mpich
fi
if [ "$MPIR_HOME" = "#""MPIR_HOME""#" ] ; then
    MPIR_HOME=`pwd`/..
fi
MPIRUN_HOME=$MPIR_HOME/util
if [ "$argsset" = "" ] ; then
   . $MPIRUN_HOME/mpirun.args
   argsset=1
fi
jrun -export -hard_cpu $cpu -hard_memory $mem -nproc $np -execute $progname $cmdLineArgs

