##### User configurable options #####

ARCH        = @ARCH@
DEVICE      = @DEVICE@
MPIR_HOME   = @MPIR_HOME@
CC          = @CC@
F77         = @F77@
AR          = @AR@
RANLIB      = @RANLIB@
INCLUDE_DIR = @INCLUDE_PATH@ -I../../mpid/$(DEVICE) -I../../include
DEVICE      = @DEVICE@
OPTFLAGS    = @OPTFLAGS@

### End User configurable options ###

SHELL = /bin/sh

MPI_INCLUDE    = ../../include/mpi.h
DEVICE_LIB = 
CFLAGS = @CFLAGS@ $(OPTFLAGS) $(INCLUDE_DIR) -DMPI_$(ARCH) $(MPIPROFILE)
FFLAGS = $(OPTFLAGS)
LIBS = ../../build/$(ARCH)/$(DEVICE)/lib/lib@MPILIBNAME@.a $(DEVICE_LIB)
MPI_COBJECTS = pcontrol.o
MPI_CSOURCES = pcontrol.c
MPI_TSOURCES = 
MPI_WSOURCES = pcontrolf.c
MPI_WOBJECTS = pcontrolf.o

MPI_SOURCES = $(MPI_CSOURCES) $(MPI_WSOURCES)
MPI_OBJECTS = $(MPI_COBJECTS) $(MPI_WOBJECTS)

default: ../../build/$(ARCH)/$(DEVICE)/lib/lib@MPILIBNAME@.a

profile: ../../build/$(ARCH)/$(DEVICE)/lib/libp@MPILIBNAME@.a

$(MPI_OBJECTS) :  $(MPI_INCLUDE)

# default_all is the same as default, but without the RANLIB.  This
# can speed up the build (ranlibs can take a LONG time).  profile_all 
# is the same, but for the profile library
default_all: $(MPI_OBJECTS)
	$(AR) ../../build/$(ARCH)/$(DEVICE)/lib/lib@MPILIBNAME@.a $?
profile_all: $(MPI_OBJECTS)
	$(AR) ../../build/$(ARCH)/$(DEVICE)/lib/libp@MPILIBNAME@.a $?
wrapperlib: $(MPI_WOBJECTS)
	$(AR) ../../build/$(ARCH)/$(DEVICE)/lib/libf@MPILIBNAME@.a $?	

#wrappers:
#	-/bin/rm -f $(MPI_TSOURCES)
#	../../util/bfort -ferr -mpi -mnative -mapptr -ptrprefix MPIR_ \
#		-anyname -I pubinc $(MPI_TSOURCES)	
source_names:
	@echo $(MPI_CSOURCES)

.c.o:
	$(CC) $(CFLAGS) -c $*.c
.f.o:
	$(F77) $(FFLAGS) -c $*.f

../../build/$(ARCH)/$(DEVICE)/lib/lib@MPILIBNAME@.a: $(MPI_OBJECTS) 
	$(AR) $@ $?
	$(RANLIB) $@

../../build/$(ARCH)/$(DEVICE)/lib/libp@MPILIBNAME@.a: $(MPI_OBJECTS) 
	$(AR) $@ $?
	$(RANLIB) $@

clean:
	/bin/rm -f *.o *~ 
