##### User configurable options #####

ARCH        = @ARCH@
COMM        = @COMM@
BOPT        = @BOPT@
P4_DIR      = @P4_DIR@
TOOLS_DIR   = @TOOLS_DIR@
MPIR_HOME   = @MPIR_HOME@
CC          = @CC@
F77         = @F77@
AR          = @AR@
RANLIB      = @RANLIB@
INCLUDE_DIR = @INCLUDE_PATH@ -I../../mpid/@DEVICE@ -I../../include
DEVICE      = @DEVICE@
OPTFLAGS    = @OPTFLAGS@

### End User configurable options ###

SHELL = /bin/sh

MPI_INCLUDE    = ../../include/mpi.h ../../include/mpi_bc.h \
                 ../../include/mpir.h ../../include/mpi_ad.h \
		 ../../include/mpisys.h 
DEVICE_LIB = 
CFLAGS = @CFLAGS@ $(OPTFLAGS) $(INCLUDE_DIR) -DMPI_$(ARCH) $(MPIPROFILE)
FFLAGS = @FFLAGS@ $(OPTFLAGS)
LIBS = ../../lib/$(ARCH)/$(COMM)/libmpi.a $(DEVICE_LIB)
MPI_FOBJECTS = farg.o initfcmn.o
MPI_COBJECTS = abort.o init.o initutil.o finalize.o initialize.o \
	errorstring.o \
	getpname.o errcreate.o errset.o errget.o errfree.o errclass.o \
	wtime.o wtick.o 
MPI_FSOURCES = farg.f initfcmn.f
MPI_CSOURCES = abort.c init.c initutil.c \
	finalize.c initialize.c errorstring.c \
	getpname.c errcreate.c errset.c errget.c errfree.c errclass.c \
	wtime.c wtick.c
MPI_TSOURCES = abort.c finalize.c initialize.c errorstring.c \
	errclass.c 
MPI_WSOURCES = abortf.c finalizef.c initializef.c errorstringf.c \
	errclassf.c
MPI_WOBJECTS = initializef.o abortf.o initf.o finalizef.o errorstringf.o \
	getpnamef.o errcreatef.o errsetf.o errgetf.o errfreef.o errclassf.o \
	wtimef.o wtickf.o 

MPI_SOURCES = $(MPI_CSOURCES) $(MPI_WSOURCES)
MPI_OBJECTS = $(MPI_COBJECTS) $(MPI_WOBJECTS)

default: ../../lib/$(ARCH)/$(COMM)/libmpi.a

profile: ../../lib/$(ARCH)/$(COMM)/libpmpi.a

wrapperlib: $(MPI_WOBJECTS)
	$(AR) ../../lib/$(ARCH)/$(COMM)/libfmpi.a $?	

# default_all is the same as default, but without the RANLIB.  This
# can speed up the build (ranlibs can take a LONG time).  profile_all 
# is the same, but for the profile library
default_all: $(MPI_OBJECTS) @MPI_FOBJECTS@ @MPE_MPI_EXT_O@
	$(AR) ../../lib/$(ARCH)/$(COMM)/libmpi.a $?
profile_all: $(MPI_OBJECTS) @MPI_FOBJECTS@
	$(AR) ../../lib/$(ARCH)/$(COMM)/libpmpi.a $?
	
$(MPI_OBJECTS) :  $(MPI_INCLUDE)
$(MPI_FOBJECTS) :  $(MPI_INCLUDE)

wrappers:
	-/bin/rm -f $(MPI_WSOURCES)
	../../util/bfort -ferr -mpi -mnative -mapptr -ptrprefix MPIR_ \
		-anyname -I pubinc $(MPI_TSOURCES)	
manpages:
	../../util/doctext -mpath ../../man/man3 -ext 3 -I pubinc \
	   -index ../../www.index -jumpfile ../../jumpfile.list \
	   -indexdir "http:/www.mcs.anl.gov/mpi/man" -heading MPI \
		$(MPI_CSOURCES)
	../../util/doc2lt $(MPI_CSOURCES) >> ../../rsum.tmp

wwwpages:
	../../util/doctext -html -mpath ../../www/www3 -ext 3 -I pubinc \
	   -index ../../www.index -jumpfile ../../jumpfile.list \
	   -indexdir "http:/www.mcs.anl.gov/mpi/man" -heading MPI \
		$(MPI_CSOURCES)
#
# This gives -mpiversion the ability to echo the configuration arguments.
initutil.o: initutil.c
	$(CC) $(CFLAGS) -c -DCONFIGURE_ARGS_CLEAN='"@CONFIGURE_ARGS_CLEAN@"' \
	initutil.c
	
.c.o:
	$(CC) $(CFLAGS) -c $*.c
.f.o:
	$(F77) $(FFLAGS) -c $*.f

../../lib/$(ARCH)/$(COMM)/libmpi.a: \
		$(MPI_OBJECTS) @MPI_FOBJECTS@ @MPE_MPI_EXT_O@
	$(AR) $@ $?
	$(RANLIB) $@

../../lib/$(ARCH)/$(COMM)/libpmpi.a: $(MPI_OBJECTS) @MPI_FOBJECTS@
	$(AR) $@ $?
	$(RANLIB) $@

clean:
	/bin/rm -f *.o *~ 
